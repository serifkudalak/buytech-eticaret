    <div class="container">
        <div class="row" style="justify-content: center;">
            <div class="col-md-6 col-lg-4">
                <div class="commerce-detail-cont mb-40-manuel">
                    <div class="icon-box"><i class="fas fa-exchange" style="font-size: 5rem;"></i></div>
                    <p class="commerce-detail-text">
                        Kullanıcılar Arası <span style="color: #ED2846 !important;">Para Transferi</span> Sağlamaktayız
                    </p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="commerce-detail-cont mb-40-manuel">
                    <div class="icon-box"><i class="fas fa-money-check" style="font-size: 5rem;"></i></div>
                    <p class="commerce-detail-text">
                        Bakiye Sistemi İle Sepette <span style="color: #ED2846 !important;">Ödeme Avantajı</span>
                    </p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="commerce-detail-cont">
                    <div class="icon-box"><i class="fas fa-user-shield" style="font-size: 5rem;"></i></div>
                    <p class="commerce-detail-text">
                        <span style="color: #ED2846 !important;">Yüz Tanıma</span> İle Siteye Güvenli Giriş
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Commerce Details End-->
