@model List<Buytech.Eticaret.Core.Model.Entity.Basket>

@{
    if (Model.Count() != 0)
    {
        <a href="/sepetim" class="button button-red button-partner d-flex align-items-center">
            <span class="basket-numb me-2">@Model.Sum(p => p.Quantity)</span>Sepetim
        </a>
    }
    else
    {
        <a href="/sepetim" class="button button-red button-partner d-flex align-items-center">
            Sepetim
        </a>
    }
}

